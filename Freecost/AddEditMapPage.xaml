<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Freecost.AddEditMapPage"
             Title="Add/Edit Map">
    <ScrollView>
        <VerticalStackLayout Padding="20">
            <Label Text="Map Name" />
            <Entry x:Name="MapNameEntry" />

            <Label Text="Supplier Name" />
            <Entry x:Name="SupplierNameEntry" />

            <Label Text="Header Row" />
            <Entry x:Name="HeaderRowEntry" Keyboard="Numeric" />

            <Label Text="Field Mappings" Margin="0,20,0,0" />
            <VerticalStackLayout x:Name="MappingsLayout" />

            <Label Text="Pack Column" />

            <Entry x:Name="PackColumnEntry" />
            <Label Text="Size Column" />
            <Entry x:Name="SizeColumnEntry" />
            <Label Text="Unit Column" />
            <Entry x:Name="UnitColumnEntry" />
            <Label Text="Combined Quantity/Unit Column" />
            <Entry x:Name="CombinedQuantityUnitColumnEntry" />

            <Label Text="Split Character" />
            <Entry x:Name="SplitCharacterEntry" />

            <Button Text="Save" Clicked="OnSaveClicked" Margin="0,20,0,0" />
            <Button Text="Cancel" Clicked="OnCancelClicked" Margin="0,10,0,0" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>