<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Freecost.LoginPage"
             Shell.NavBarIsVisible="False"
             BackgroundColor="White">
    <ScrollView>
        <VerticalStackLayout
            Spacing="20"
            Padding="30, 20"
            VerticalOptions="Center"
            HorizontalOptions="Center">

            <Image
                Source="logo.png"
                Aspect="AspectFit"
                Margin="0,0,0,20"
                MaximumWidthRequest="450"/>

            <Frame BackgroundColor="#CCFFFFFF"
                   CornerRadius="0"
                   Padding="30"
                   HasShadow="True"
                   WidthRequest="450">
                <VerticalStackLayout Spacing="20">

                    <Grid ColumnDefinitions="*,*" ColumnSpacing="10">
                        <VerticalStackLayout Grid.Column="0">
                            <Label Text="Email Address" />
                            <Border>
                                <Entry
                                    x:Name="EmailEntry"
                                    Placeholder="you@example.com"
                                    Keyboard="Email" />
                            </Border>
                        </VerticalStackLayout>

                        <VerticalStackLayout Grid.Column="1">
                            <Label Text="Password" />
                            <Border>
                                <Entry
                                    x:Name="PasswordEntry"
                                    Placeholder="Enter your password"
                                    IsPassword="True" />
                            </Border>
                        </VerticalStackLayout>
                    </Grid>

                    <HorizontalStackLayout Spacing="10" Margin="0,10,0,10">
                        <CheckBox x:Name="RememberMeCheckBox" />
                        <Label Text="Remember Me" VerticalOptions="Center"/>
                    </HorizontalStackLayout>

                    <Button
                    x:Name="LoginButton"
                    Text="Login"
                    Clicked="OnLoginClicked"
                    HorizontalOptions="Fill"
                    Style="{StaticResource EdgyButtonStyle}" />

                    <Button
                    x:Name="OfflineButton"
                    Text="Work Offline"
                    Clicked="OnOfflineClicked"
                    HorizontalOptions="Fill"
                    Margin="0,10,0,0"
                    Style="{StaticResource EdgyButtonStyle}" />

                </VerticalStackLayout>
            </Frame>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>