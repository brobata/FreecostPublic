<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Freecost.ImportMapManagerPage"
             Title="Import Map Manager">
    <ScrollView>
        <VerticalStackLayout>
            <Label
                Text="Import Map Manager"
                VerticalOptions="Center"
                HorizontalOptions="Center" />

            <Button Text="Select File" Clicked="OnSelectFileClicked" />
            <Button Text="Add Map" Clicked="OnAddMapClicked" />
            <Button Text="Export Maps" Clicked="OnExportMapsClicked" />
            <ListView x:Name="MapsListView">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>

                            <StackLayout Orientation="Horizontal">
                                <Label Text="{Binding MapName}" />
                                <Button Text="Edit" Clicked="OnEditMapClicked" CommandParameter="{Binding .}" />
                                <Button Text="Delete" Clicked="OnDeleteMapClicked" CommandParameter="{Binding .}" />

                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <Button Text="Done" Clicked="OnDoneClicked" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>