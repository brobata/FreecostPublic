<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Freecost.MainShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Freecost"
    Shell.FlyoutBehavior="Flyout"
    Title="Freecost">

    <Shell.FlyoutContent>
        <local:FlyoutContentView />
    </Shell.FlyoutContent>

    <TabBar>
        <ShellContent Title="Recipes" ContentTemplate="{DataTemplate local:RecipesPage}" Route="RecipesPage" />
        <ShellContent Title="Entrees" ContentTemplate="{DataTemplate local:EntreesPage}" Route="EntreesPage" />
        <ShellContent Title="Ingredients" ContentTemplate="{DataTemplate local:IngredientsPage}" Route="IngredientsPage" />
        <ShellContent Title="Settings" ContentTemplate="{DataTemplate local:SettingsPage}" Route="SettingsPage" />
    </TabBar>

</Shell>