<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Freecost.AddEditUnitConversionPage"
             Title="Add/Edit Unit Conversion">
    <ScrollView>
        <VerticalStackLayout Spacing="10" Padding="20">
            <Frame Padding="10" CornerRadius="5" BorderColor="Gray">
                <VerticalStackLayout Spacing="10">

                    <Label Text="Conversion Details" FontAttributes="Bold" FontSize="Medium" />

                    <Border>
                        <VerticalStackLayout Padding="5">
                            <Label Text="Unit Name" />

                            <Entry x:Name="UnitNameEntry" Placeholder="e.g., gram" />
                        </VerticalStackLayout>
                    </Border>

                    <Border>

                        <VerticalStackLayout Padding="5">
                            <Label Text="Category" />
                            <Entry x:Name="CategoryEntry" Placeholder="e.g., Weight" />

                        </VerticalStackLayout>
                    </Border>

                    <Border>
                        <VerticalStackLayout Padding="5">
                            <Label Text="ToBaseFactor" 
 />
                            <Entry x:Name="ToBaseFactorEntry" Keyboard="Numeric" Placeholder="e.g., 1" />
                        </VerticalStackLayout>
                    </Border>
                </VerticalStackLayout>

            </Frame>
            <Grid ColumnDefinitions="*,*" ColumnSpacing="10">
                <Button Grid.Column="0" Text="Save" Clicked="OnSaveClicked" />
                <Button Grid.Column="1" Text="Cancel" Clicked="OnCancelClicked" />
            </Grid>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>