<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Freecost.AdminPage"
             Title="Admin">
    <VerticalStackLayout Spacing="20" Padding="30">
        <Label
            Text="Admin Console"
            Style="{StaticResource Headline}"
            HorizontalOptions="Center" />

        <Button Text="Manage Unit Conversions"
        Clicked="OnManageUnitConversionsClicked"
        HorizontalOptions="Fill" />
        
        <Button Text="Manage Import Maps" 
                Clicked="OnManageImportMapsClicked" 
                HorizontalOptions="Fill" />

        <Button Text="Reset Popup Counter (for testing)"
                Clicked="OnResetPopupCounterClicked"
                HorizontalOptions="Fill" />

    </VerticalStackLayout>
</ContentPage>